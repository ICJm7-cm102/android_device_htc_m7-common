<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
                android:title="@string/proximity_subcat_title">
    <!-- Proximity calibration -->
    <ListPreference
                android:key="proximity_calibration"
                android:title="@string/proximity_calibration_title"
                android:summary="@string/proximity_calibration_summary"
                android:entries="@array/proximity_calibration_entries"
                android:entryValues="@array/proximity_calibration_entries_values"
                android:defaultValue="0x0 0xFFFF3C2D" />
    </PreferenceCategory>
    <PreferenceCategory
            android:title="@string/pocketdetection_title">
            <ListPreference
                android:key="pocketdetection_method"
                android:title="@string/pocketdetection_summary_head"
                android:summary="@string/pocketdetection_summary"
                android:entries="@array/pocketdetection_entries"
                android:entryValues="@array/pocketdetection_entries_values"
                android:defaultValue="1" />
    </PreferenceCategory>
    <PreferenceCategory
            android:title="@string/flick_pick_title">
            <CheckBoxPreference
                android:key="flick2wake_switch"
                android:title="@string/flick2wake_summary_head"
                android:summary="@string/flick2wake_summary"
                android:defaultValue="0" />
            <CheckBoxPreference
                android:key="flick2sleep_switch"
                android:title="@string/flick2sleep_summary_head"
                android:summary="@string/flick2sleep_summary"
                android:defaultValue="0" />
            <ListPreference
                android:key="f2w_sensitivity_method"
                android:title="@string/f2w_sensitivity_summary_head"
                android:summary="@string/f2w_sensitivity_summary"
                android:entries="@array/f2w_sensitivity_entries"
                android:entryValues="@array/f2w_sensitivity_entries_values"
                android:defaultValue="1" />
            <ListPreference
                android:key="f2s_time_out_method"
                android:title="@string/f2s_time_out_summary_head"
                android:summary="@string/f2s_time_out_summary"
                android:entries="@array/f2s_time_out_entries"
                android:entryValues="@array/f2s_time_out_entries_values"
                android:defaultValue="0" />
            <CheckBoxPreference
                android:key="pick2wake_switch"
                android:title="@string/pick2wake_summary_head"
                android:summary="@string/pick2wake_summary"
                android:defaultValue="0" />
    </PreferenceCategory>
</PreferenceScreen>

